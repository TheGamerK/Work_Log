<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
    <widget id="com.ionicframework.new723380" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

        <icon src="icon.png" />
        
    <platform name="android">
        <splash src="splash.png" density="land-hdpi"/>
        <splash src="splash.png" density="land-ldpi"/>
        <splash src="splash.png" density="land-mdpi"/>
        <splash src="splash.png" density="land-xhdpi"/>
        <splash src="splash.png" density="port-hdpi"/>
        <splash src="splash.png" density="port-ldpi"/>
        <splash src="splash.png" density="port-mdpi"/>
        <splash src="splash.png" density="port-xhdpi"/>
    </platform>
        
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="10000" />

        <name>Time Me</name>
        <description>
            Keep track of your work in a log with a time stamp. Note - Still in testing and development
        </description>
        <author email="thegamerk.cn@gmail.com" href="http://example.com.com/">
            Patrick Ingebretsen, Jonathan Duong, Rolfe Chappell, Cory Nelson
        </author>

        <content src="index.html" />
        <access origin="*" />
        <preference name="webviewbounce" value="false" />
        <preference name="UIWebViewBounce" value="false" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="android-minSdkVersion" value="16" />
        <preference name="BackupWebStorage" value="none" />
        <feature name="StatusBar">

            <plugin name="de.appplant.cordova.plugin.background-mode" spec="0.6.4" source="pgb" />
            <plugin name="com.badrit.backgroundjs" spec="0.1.0" source="pgb" />
            <plugin name="com.badrit.backbutton" spec="0.1.0" source="pgb" />

            <param name="ios-package" value="CDVStatusBar" onload="true" />
        </feature>


    </widget>